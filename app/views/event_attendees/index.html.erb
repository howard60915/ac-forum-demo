<h1><%= @event.name %>Attendees list</h1>


<table class="table">
<tr>
<% @attendees.each do |a| %>
</tr>
	<td>
		<%= a.name %>
	</td>
	<td>	
		<%= link_to 'Attendees Detail', event_attendee_path(@event, a), :class => "btn btn-primary" %>
		<%= link_to 'Edit Attendees', edit_event_attendee_path(@event, a), :class => "btn btn-success" %>
		<%= link_to 'Attendees Cancel', event_attendee_path(@event, a),:method => :delete, :class => "btn btn-danger" %>
	</td>
<% end  %>
</table>

<%= link_to 'New Attendees', new_event_attendee_path(@event), :class => "btn btn-success" %>
<%= link_to 'Back to Events List', events_path, :class => "btn btn-primary" %>
