<h1>Attending Event</h1>

<%= form_for @attendee, :url => event_attendees_path(@event) do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name , :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= f.submit :submit_name, :class => "btn btn-success"  %>
	</div>

<% end %>	
<%= link_to 'Back to Attendees List', event_attendees_path(@event), :class => "btn btn-default" %>